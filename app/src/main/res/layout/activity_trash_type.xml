<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trash_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.wilderpereira.ecobox.TrashTypeActivity">


    <android.support.v7.widget.CardView
        app:cardElevation="2dp"
        app:elevation="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#000"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Metal"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardElevation="2dp"
        app:elevation="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#912"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Não é Metal:"/>

                <TextView
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Garrafa Pet"/>

                <TextView
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Papel"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardElevation="2dp"
        app:elevation="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#123"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="300 pontos"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:onClick="proceed"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reciclar!"/>

    </LinearLayout>

</LinearLayout>
